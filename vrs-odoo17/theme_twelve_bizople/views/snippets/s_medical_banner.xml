<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_medical_banner" name="Home Banner Three">
		<section id="banner2"
			class="s_medical_banner spacer banner p-b-0 " style="background-image: url(/theme_twelve_bizople/static/src/img/banner-bg_medical.jpg);" >
			<div class="container">
				<div class="row">
					<div class="col-lg-5 align-self-center hidden-md-down ">
						<section class="p-40 bg-info-1 o_animate_preview o_animate o_anim_fade_in_down">
							<h3 class="text-white">The Best Medical Treatment Which You Deserve
							</h3>
							<p class="text-white op-7 m-t-20 custom_p">To accomplish great things, we must not only act
								but also dream and plan.
							</p>
						</section>
					</div>
					<div class="col-md-7 col-lg-4 ml-auto o_animate_preview o_animate o_anim_fade_in_up">
						<section class="s_website_form pt16 pb16 o_colored_level bg-white " data-vcss="001" data-snippet="s_website_form" data-name="Form" style="background-image: none;">
								<div class="container">							
									<form action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required contact-form appointment-form" data-mark="*" data-success-mode="redirect" data-success-page="/contactus-thank-you" data-model_name="crm.lead">
										<div class="s_website_form_rows  s_col_no_bgcolor">
										<div class="form-group s_website_form_field col-12  s_website_form_required" data-type="char" data-name="Field">
											<label class="s_website_form_label  " style="width: 200px" for="s_medical_banner_contactus5_form_name">
											<span class="s_website_form_label_content">Your Name</span>
											<span class="s_website_form_mark"> *</span>
											</label>
											
											<input type="text" placeholder="Enter Your Name*" class="form-control s_website_form_input" name="contact_name" required="1" id="s_medical_banner_contactus5_form_name"/>
											
										</div>

										<div class="form-group  s_website_form_field col-12  s_website_form_required  " data-type="email" data-name="Field">
											<label class="s_website_form_label  " style="width: 200px" for="s_medical_banner_contactus5_form_email">
											<span class="s_website_form_label_content">Your Email</span>
											<span class="s_website_form_mark"> *</span>
											</label>
											
											<input type="email" placeholder="Enter Your E-mail*" class="form-control s_website_form_input" name="email_from" required="1" id="s_medical_banner_contactus5_form_email"/>
											
										</div>

										<div class="form-group  s_website_form_field col-12" data-type="tel" data-name="Field">
											<label class="s_website_form_label  " style="width: 200px" for="s_medical_banner_contactus5_form_phone">
											<span class="s_website_form_label_content">Phone Number</span>
											</label>
											
											<input type="tel" placeholder="Enter Your Phone Number" class="form-control s_website_form_input" name="phone" id="s_medical_banner_contactus5_form_phone"/>
											
										</div>
										
										
										<div class="form-group  s_website_form_field col-12  s_website_form_model_required  " data-type="char" data-name="Field">
											
											<label class="s_website_form_label  " style="width: 200px" for="s_medical_banner_contactus5_form_subject">
											<span class="s_website_form_label_content">Subject</span>
											<span class="s_website_form_mark"> *</span>
											</label>
											
											<input type="text" placeholder="Enter Your Subject*" class="form-control s_website_form_input" name="name" required="true" id="s_medical_banner_contactus5_form_subject"/>
										</div>
										<div class="form-group  s_website_form_field col-12  s_website_form_required  " data-type="text" data-name="Field">
											<label class="s_website_form_label  " style="width: 200px" for="s_medical_banner_contactus5_form_message">
											<span class="s_website_form_label_content">Message</span>
											<span class="s_website_form_mark"> *</span>
											</label>
											
											<textarea class="form-control s_website_form_input" name="description" placeholder="Enter Your Question*" required="1" id="s_medical_banner_contactus5_form_message" rows="5"/>
										</div>
										<div class="form-group  col-12 s_website_form_submit" data-name="Submit Button">
											
											<a href="#" class="s_website_form_send bg-danger-gradient btn btn-block btn-lg flat arrow-btn text-white" type="submit">Book Your Appointment Now<span class="fa fa-1x fa-fw fa-long-arrow-right ml-1"></span></a>
											<span id="s_website_form_result"/>
										</div>											
										</div>
									</form>
								</div>
							</section>
					</div>
				</div>
			</div>
		</section>
	</template>

</odoo>