<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="s_coming_soon_banner" name="Coming Soon Banner">
		<section
			class="s_coming_soon_banner static-slider9 po-relative">
			<div class="container">
				<div class=" row">
					<div class="col-md-6 info-detail align-self-center">
						<a href="/" class="navbar-brand logo">
							<span t-field="res_company.logo"
								t-options="{'widget': 'image'}"
								t-att-alt="'Logo of %s' % res_company.name"
								t-att-title="res_company.name" />
						</a>
						<h1 class="title">Don't see neighborhood?</h1>
						<h6 class="subtitle">To accomplish great things, we must not only
							act,
							but
							also dream; not only plan, but also believe.
						</h6>
						<p class="text-dark font-medium">Enter email address to get the app</p>
						<form class="form-inline">
							<div class="form-group m-r-10 js_subscribe" data-list-id="1"
								data-subscribe="off">
								<input type="email" name="email" id="inputPassword2"
									class="js_subscribe_email form-control form-control-md"
									placeholder="email address" />
								<span class="input-group-append">
									<a role="button" href="#"
										class="btn btn-md   js_subscribe_btn">GET</a>
									<a role="button" href="#"
										class="btn btn-success-gradient gradient-btn btn-success-gradient js_subscribed_btn d-none o_default_snippet_text"
										disabled="disabled">Thanks</a>
								</span>
								<div
									class="alert alert-success d-none o_default_snippet_text"
									role="status">Thanks for your subscription!</div>
							</div>
						</form>
					</div>
					<div class="col-md-6 bg-img img-fluid"
						style="background-image:url(/theme_twelve_bizople/static/src/img/img2_coming_soon.jpg)">

					</div>
				</div>
			</div>
		</section>
	</template>

</odoo>